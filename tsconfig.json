{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*",
    "./**/*.ts",
    "./**/*.js",
    "./**/*.tsx",
    "./**/*.jsx",
    "typed-css.d.ts",
    "global.d.ts",
    "auto-imports.d.ts"
  ],
  "exclude": ["node_modules", "dist", "dist-HashRouter"]
}
